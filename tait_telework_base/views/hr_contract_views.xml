<odoo>
    <record id="view_hr_contract_form_inherit_actual_wage" model="ir.ui.view">
        <field name="name">hr.contract.form.inherit.actual.wage</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='wage']" position="after">
                <field name="actual_wage_percent"/>
            </xpath>
        </field>
    </record>
</odoo>
