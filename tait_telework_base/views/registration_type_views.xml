<odoo>
    
    <!-- List(Tree) View -->
    <record id="view_registration_type_tree" model="ir.ui.view">
        <field name="name">registration.type.tree</field>
        <field name="model">registration.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_registration_type_form" model="ir.ui.view">
        <field name="name">registration.type.form</field>
        <field name="model">registration.type</field>
        <field name="arch" type="xml">
            <form string="Registration Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_registration_type" model="ir.actions.act_window">
        <field name="name">Registration Types</field>
        <field name="res_model">registration.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item -->
    
    <menuitem id="menu_registration_type_root"
              name="Registration Types"
              parent="hr.menu_human_resources_configuration"
              action="action_registration_type"
              sequence="50"/>
     
</odoo>
