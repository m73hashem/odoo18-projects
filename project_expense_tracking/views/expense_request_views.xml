<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <!-- List View -->
  <record id="view_project_expense_request_list" model="ir.ui.view">
    <field name="name">project.expense.request.list</field>
    <field name="model">project.expense.request</field>
    <field name="arch" type="xml">
      <list string="Project Expense Requests" default_order="date desc">
        <field name="name"/>
        <field name="project_id"/>
        <field name="manager_id"/>
        <field name="date"/>
        <field name="state"/>
      </list>
    </field>
  </record>

  <!--add search-->
  <record id="view_project_expense_request_search" model="ir.ui.view">
    <field name="name">project.expense.request.search</field>
    <field name="model">project.expense.request</field>
    <field name="arch" type="xml">
        <search string="Search Expense Requests">
            <field name="name"/>
            <field name="project_id"/>
            <field name="manager_id"/>
            <field name="date" />
            <field name="total_amount"/>
            <field name="state"/>
            <group expand="1" string="Group By">
                <filter name="group_by_project" string="Project" context="{'group_by': 'project_id'}"/>
            </group>
        </search>
    </field>
</record>


  <!-- Form View -->
  <record id="view_project_expense_request_form" model="ir.ui.view">
    <field name="name">project.expense.request.form</field>
    <field name="model">project.expense.request</field>
    <field name="arch" type="xml">
      <form string="Project Expense Request">

        <!-- Header with Statusbar and Buttons -->
        <header>
          <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,approved,done,cancel"/>
          <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
          <button name="action_approve" string="Approve" type="object" class="btn-info"/>
          <button name="action_done" string="Done" type="object" class="btn-success"/>
          <button name="action_cancel" string="Cancel" type="object" class="btn-danger"/>
          <button name="action_set_to_draft" string="Set to Draft" type="object" class="btn-secondary"/>
        </header>

        <!-- Body -->
        <sheet>
          <group>
            <field name="name" readonly="1"/>
            <field name="date"/>
            <field name="project_id"/>
            <field name="manager_id" readonly="1"/>
          </group>

          <notebook>
            <page string="Expense Lines">
              <field name="line_ids">
                  <list editable="bottom">
                      <field name="expense_type_id"/>
                      <field name="amount"/>
                  </list>
              </field>
            </page>
          </notebook>
        </sheet>

      </form>
    </field>
  </record>

  <!-- Action -->
  <record id="action_project_expense_request" model="ir.actions.act_window">
    <field name="name">Expense Requests</field>
    <field name="res_model">project.expense.request</field>
    <field name="view_mode">list,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Create your first project expense request
      </p>
    </field>
  </record>

</odoo>
