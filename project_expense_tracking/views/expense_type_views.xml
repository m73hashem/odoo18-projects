<odoo>
    <record id="view_expense_type_list" model="ir.ui.view">
        <field name="name">project.expense.type.list</field>
        <field name="model">project.expense.type</field>
        <field name="arch" type="xml">
            <list>
            <field name="name" string="Name"/>
            <field name="limit" string="Limit" class="text-right"/>
            </list>
        </field>
    </record>

    <record id="view_expense_type_form" model="ir.ui.view">
        <field name="name">project.expense.type.form</field>
        <field name="model">project.expense.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="limit"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_project_expense_type" model="ir.actions.act_window">
        <field name="name">Expense Types</field>
        <field name="res_model">project.expense.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first expense type
            </p>
        </field>
    </record>
</odoo>
