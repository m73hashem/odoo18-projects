<odoo>
    <record id="view_attendance_generation_wizard_form" model="ir.ui.view">
        <field name="name">attendance.generation.wizard.form</field>
        <field name="model">attendance.generation.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Attendance Records">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="intensity_level"/>
                </group>
                <footer>
                    <button string="Generate" type="object" name="action_confirm_generation" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


</odoo>
