<odoo>
    <!-- form view-->
    <record id="view_hr_attendance_form_inherit_generated" model="ir.ui.view">
        <field name="name">hr.attendance.form.generated.by.system</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='check_out_group']" position="after">
                <separator string="Status" name="status_separator" />
                <div class="o_row">
                    <label for="generated_by_system" string="Generated by System"/>
                    <field name="generated_by_system" nolabel="1"/>
                </div>
            </xpath>
        </field>
    </record>

    <!-- list view-->
    <record id="view_hr_attendance_tree_inherit_generated" model="ir.ui.view">
        <field name="name">hr.attendance.tree.generated.by.system</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>  
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="generated_by_system" string="Generated?" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
