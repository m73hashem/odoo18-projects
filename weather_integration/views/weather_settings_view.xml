<odoo>
    <!-- Form View -->
    <record id="view_weather_config_form" model="ir.ui.view">
        <field name="name">weather.config.form</field>
        <field name="model">weather.config</field>
        <field name="arch" type="xml">
            <form string="Weather Settings" create="false" delete="false" edit="true" pager="false">
                <header>
                <button string="Save" type="object" name="action_save_config" class="btn-primary"/>
                <button string="Discard" class="btn-secondary" special="cancel"/>
            </header>
                <sheet>
                    <group>
                        <group string="Weather Integration">
                            <field name="weather_api_key"/>
                            <field name="default_city"/>
                        </group>
                    </group>
                </sheet>

            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_weather_config" model="ir.actions.act_window">
        <field name="name">Weather Settings</field>
        <field name="res_model">weather.config</field>
        <field name="view_mode">form</field>
       <!-- <field name="view_id" ref="view_weather_config_form"/> -->
        <field name="target">current</field>
    </record>

    <!-- Server Action to open the singleton -->
    <record id="action_open_weather_config_server" model="ir.actions.server">
        <field name="name">Open Weather Config</field>
        <field name="model_id" ref="model_weather_config"/>
        <field name="state">code</field>
        <field name="code">action = env['weather.config'].action_open_weather_config()</field>

    </record>

    <!-- Menus -->
    <menuitem id="menu_weather_config_root"
              name="Configuration"
              parent="menu_weather_root"
              sequence="30"/>

    <menuitem id="menu_weather_config"
              name="Settings"
              parent="menu_weather_config_root"
              action="action_open_weather_config_server"
              sequence="10"/>
</odoo>
