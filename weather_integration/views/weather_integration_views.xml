<odoo>
    <record id="view_weather_integration_list" model="ir.ui.view">
        <field name="name">weather.integration.list</field>
        <field name="model">weather.integration</field>
        <field name="arch" type="xml">
            <list create="false" edit="false">
                <field name="city"/>
                <field name="temperature"/>
                <field name="description"/>
                <field name="queried_at"/>
            </list>
        </field>
    </record>

    <record id="view_weather_integration_form" model="ir.ui.view">
        <field name="name">weather.integration.form</field>
        <field name="model">weather.integration</field>
        <field name="arch" type="xml">
            <form string="Weather Record" create="false" edit="false">
                <sheet>
                    <group>
                        <field name="city"/>
                        <field name="temperature"/>
                        <field name="description"/>
                        <field name="queried_at"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_weather_history" model="ir.actions.act_window">
        <field name="name">Weather History</field>
        <field name="res_model">weather.integration</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
