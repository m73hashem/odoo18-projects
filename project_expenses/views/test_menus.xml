<odoo>
    <!-- main menu -->
    <menuitem id="menu_test_project_expenses_root"
              name="Test Project Expenses"
              sequence="5"
              groups="base.group_user" />  <!-- all internal users -->

    <!-- action to show the model -->
    <record id="action_test_project_expenses" model="ir.actions.act_window">
        <field name="name">Test Project Expenses</field>
        <field name="res_model">project.expense.request</field> <!-- module.model_name -->
        <field name="view_mode">tree,form</field>
    </record>

    <!--submenu related to action -->
    <menuitem id="menu_test_project_expenses_sub"
              name="All Expenses"
              parent="menu_test_project_expenses_root"
              action="action_test_project_expenses"
              sequence="1"
              groups="base.group_user"/>
</odoo>
