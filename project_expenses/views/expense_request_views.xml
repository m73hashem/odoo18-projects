<odoo>
    <record id="view_project_expense_request_form" model="ir.ui.view">
        <field name="name">project.expense.request.form</field>
        <field name="model">project.expense.request</field>
        <field name="arch" type="xml">
            <form string="Expense Request">
                <!-- Header with Statusbar and Buttons -->
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,approved,done,cancel"/>
                        <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                        <button name="action_approve" string="Approve" type="object" class="btn-info"/>
                        <button name="action_done" string="Done" type="object" class="btn-success"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-danger"/>
                        <button name="action_set_draft" string="Set to Draft" type="object" class="btn-secondary"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="date"/>
                        <field name="project_id"/>
                        <field name="project_manager_id" readonly="1"/>
                        <field name="partner_id"/>
                    </group>
                    <notebook>
                        <page string="Expense Lines">
                            <field name="expense_line_ids">
                                <list editable="bottom">
                                    <field name="expense_type_id"/>
                                    <field name="amount"/>
                                </list>
                            </field>
                        </page>
                        <page string="Product Lines">
                            <field name="product_line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="product_uom"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                         <field name="name" readonly="1"/>
                    </footer>

                </sheet>
            </form>
        </field>
    </record>

    <record id="view_project_expense_request_list" model="ir.ui.view">
        <field name="name">project.expense.request.list</field>
        <field name="model">project.expense.request</field>
        <field name="arch" type="xml">
            <list string="Expense Requests">
                <field name="name"/>
                <field name="date"/>
                <field name="project_id"/>
                <field name="project_manager_id"/>
                <field name="state" /> <!-- widget="statusbar" clickable="1" deleted from this tag to solve the error-->
            </list>
        </field>
    </record>

    <record id="action_project_expense_requests" model="ir.actions.act_window">
        <field name="name">Expense Requests</field>
        <field name="res_model">project.expense.request</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new expense request</p>
        </field>
    </record>
