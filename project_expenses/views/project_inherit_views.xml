<odoo>
    <record id="view_project_project_form_inherit_expense" model="ir.ui.view">
        <field name="name">project.project.form.inherit.expense</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
           <xpath expr="//sheet/group" position="after">
                <group>
                    <field name="total_expense_amount" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>

