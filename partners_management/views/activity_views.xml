<odoo>
    <record id="view_partner_activity_list" model="ir.ui.view">
        <field name="name">partner.activity.list</field>
        <field name="model">partner.activity</field>
        <field name="groups_id" eval="[(4, ref('partners_management.group_partner_manager'))]"/>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="status"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </list>
        </field>
    </record>

    <record id="view_partner_activity_form" model="ir.ui.view">
        <field name="name">partner.activity.form</field>
        <field name="model">partner.activity</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="status"/>
                        <field name="responsible_user_id"/>
                    </group>
                </sheet>

                <!-- Chatter -->
                <chatter/>

            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_activity" model="ir.actions.act_window">
        <field name="name">Activity</field>
        <field name="res_model">partner.activity</field>
        <field name="view_mode">form,list</field>
        <field name="view_id" ref="view_partner_activity_list"/>
        <field name="context">{'group_by': 'partner_id'}</field>
    </record>

</odoo>
