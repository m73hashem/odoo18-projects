<odoo>
    <record id="view_partnership_plan_list" model="ir.ui.view">
        <field name="name">partnership.plan.list</field>
        <field name="model">partnership.plan</field>
        <field name="groups_id" eval="[(4, ref('partners_management.group_partner_manager'))]"/>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="year"/>
                <field name="approved"/>
            </list>
        </field>
    </record>

    <record id="view_partnership_plan_form" model="ir.ui.view">
        <field name="name">partnership.plan.form</field>
        <field name="model">partnership.plan</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="name"/>
                        <field name="year"/>
                        <field name="objectives"/>
                        <field name="approved"/>
                        <field name="tasks"/>
                    </group>
                </sheet>

                <!-- Chatter -->
                <chatter/>

            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_plan" model="ir.actions.act_window">
        <field name="name">plans</field>
        <field name="res_model">partnership.plan</field>
        <field name="view_mode">form,list</field>
        <field name="view_id" ref="view_partnership_plan_list"/>
        <field name="context">{'group_by': 'partner_id'}</field>
    </record>

</odoo>
