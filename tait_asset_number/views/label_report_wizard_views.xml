<odoo>
  <!-- View for Label Report Wizard -->
  <record id="view_label_report_wizard_form" model="ir.ui.view">
    <field name="name">label.report.wizard.form</field>
    <field name="model">label.report.wizard</field>
    <field name="arch" type="xml">
      <form string="Choose Label Size">
        <group>
          <field name="paperformat_code" widget="radio" nolabel="1" colspan="2"/>
        </group>
        <footer>
          <button name="print_label"
                  type="object"
                  string="Confirm"
                  class="btn-primary"/>
          <button string="Discard" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <!-- Action to launch the wizard -->
  <record id="action_label_report_wizard" model="ir.actions.act_window">
    <field name="name">Print Labels</field>
    <field name="res_model">label.report.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>
</odoo>

